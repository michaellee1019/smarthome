#!/bin/sh

# https://github.com/maddox/dasher/wiki/Running-Dasher-on-a-Raspberry-Pi-at-startup
[Unit]
Description=node-sonos-http-api
After=network.target

[Service]
Type=simple
#user with access to node-sonos-http-api files
User=pi
WorkingDirectory=/home/pi/node-sonos-http-api
#use command "which npm" to determine correct location of NPM
ExecStart=/usr/bin/npm run start
Restart=on-failure
RestartSec=10
KillMode=process

[Install]
WantedBy=multi-user.target
